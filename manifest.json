    const course = card.dataset.course;
    const mainBtn = card.querySelector('.main-btn');
    const backBtn = card.querySelector('.back-btn');
    let state = 0; // 0:åˆæœŸ,1:é–‹å§‹/æ¤œå“å®Œäº†,2:é€ä¿¡å¾…ã¡,3:é€ä¿¡æ¸ˆ

    mainBtn.addEventListener('click', async () => {
      if (mainBtn.classList.contains('disabled')) return;
      const now = new Date();
      const timeStr = now.toISOString();
      const mode = mainBtn.classList.contains('work-waiting') ? 'workload' : 'inspection';

      if (mode === 'workload') {
        if (state === 0) {
          mainBtn.textContent = 'ä½œæ¥­ä¸­';
          mainBtn.className = 'main-btn work-started';
          backBtn.disabled = false;
          saveRecord(course, 'ä½œæ¥­é–‹å§‹', timeStr);
          state = 1;
        } else if (state === 1) {
          mainBtn.textContent = 'é€ä¿¡å¾…ã¡';
          mainBtn.className = 'main-btn work-ended';
          saveRecord(course, 'ä½œæ¥­çµ‚äº†', timeStr);
          state = 2;
        } else if (state === 2) {
          const fileName = `${now.toISOString().replace(/[:.]/g, '-')}_${course}.json`;
          await uploadToDrive(fileName, JSON.stringify({ course, mode: 'ç©è¾¼', timestamp: timeStr }));
          mainBtn.textContent = 'é€ä¿¡æ¸ˆã¿';
          mainBtn.className = 'main-btn work-sent disabled';
          state = 3;
        }
      } else if (mode === 'inspection') {
        if (state === 0) {
          mainBtn.textContent = 'é€ä¿¡å¾…ã¡';
          mainBtn.className = 'main-btn inspect-ended';
          saveRecord(course, 'æ¤œå“çµ‚äº†', timeStr);
          backBtn.disabled = false;
          state = 1;
        } else if (state === 1) {
          const fileName = `${now.toISOString().replace(/[:.]/g, '-')}_${course}.json`;
          await uploadToDrive(fileName, JSON.stringify({ course, mode: 'æ¤œå“', timestamp: timeStr }));
          mainBtn.textContent = 'é€ä¿¡æ¸ˆã¿';
          mainBtn.className = 'main-btn inspect-done disabled';
          state = 2;
        }
      }
    });

    backBtn.addEventListener('click', () => {
      const mode = mainBtn.classList.contains('work-waiting') || mainBtn.classList.contains('work-started') || mainBtn.classList.contains('work-ended') ? 'workload' : 'inspection';
      if (state === 1) {
        mainBtn.textContent = mode === 'workload' ? 'å¾…æ©Ÿä¸­' : 'æ¤œå“ä¸­';
        mainBtn.className = mode === 'workload' ? 'main-btn work-waiting' : 'main-btn inspect-waiting';
        backBtn.disabled = true;
